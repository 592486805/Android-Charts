<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white" >
    <LinearLayout
        android:id="@+id/lin_product_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_info_horizontal_height"
        android:background="@drawable/productgroundcolor" >
        <TextView
    	    android:id="@+id/tv_product_name"
    	    android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textSize="22sp"
        	android:textColor="@drawable/white" />
        <TextView
    	    android:id="@+id/tv_current_price"
    	    android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
    	    android:id="@+id/tv_change_price"
    	    android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
    	    android:id="@+id/tv_change_percent"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
            android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white"
        	android:text="@string/buy_label" />
        <TextView
    	    android:id="@+id/tv_buy_price"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
            android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white"
        	android:text="@string/sell_label" />
        <TextView
    	    android:id="@+id/tv_sell_price"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
            android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white"
        	android:text="@string/horzizontal_high_label" />
        <TextView
    	    android:id="@+id/tv_high_price"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
            android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white"
        	android:text="@string/horzizontal_low_label" />
        <TextView
    	    android:id="@+id/tv_low_price"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
        <TextView
            android:id="@+id/tv_date_time"
            android:layout_marginLeft="10dip"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:textColor="@drawable/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_tops"
        android:layout_below="@+id/lin_product_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_chart_type_height" >
        <TextView
	        android:id="@+id/tv_handicap"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_handicap" />
	    <TextView
	        android:id="@+id/tv_tick"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_1min" />
	    <TextView
	        android:id="@+id/tv_2days"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_2days" />
	    <TextView
	        android:id="@+id/tv_3days"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_3days" />
	    <TextView
	        android:id="@+id/tv_detail"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_detail" />
	    <TextView
	        android:id="@+id/tv_day"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_day" />
	    <TextView
	        android:id="@+id/tv_week"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_week" />
	    <TextView
	        android:id="@+id/tv_month"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_month" />
	    <TextView
	        android:id="@+id/tv_minute"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="0"
        	android:gravity="center" />
	    <TextView
	        android:id="@+id/tv_1minute"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_1minute" />
	    <TextView
	        android:id="@+id/tv_5minute"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_5minute" />
	    <TextView
	        android:id="@+id/tv_15minute"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_15minute" />
	    <TextView
	        android:id="@+id/tv_30minute"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_30minute" />
	    <TextView
	        android:id="@+id/tv_1hour"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_1hour" />
	    <TextView
	        android:id="@+id/tv_2hour"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_2hour" />
	    <TextView
	        android:id="@+id/tv_4hour"
        	android:layout_width="0dip"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_4hour" />
	</LinearLayout>
	<RelativeLayout
	    android:layout_below="@+id/lin_tops"
	    android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  >
	    <LinearLayout
	        android:id="@+id/lin_detail_top"
	        android:layout_alignParentTop="true"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/tickchart_order_height"
	        android:orientation="horizontal"
	        android:visibility="invisible" >
            <TextView
	        	android:layout_width="0dip"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
	        	android:gravity="center"
	        	android:textColor="@drawable/lightgray"
	        	android:text="@string/detail_time" />
		    <TextView
	        	android:layout_width="0dip"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
	        	android:gravity="center"
	        	android:textColor="@drawable/lightgray"
	        	android:text="@string/detail_price" />
		    <TextView
	        	android:layout_width="0dip"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
	        	android:gravity="center"
	        	android:textColor="@drawable/lightgray"
	        	android:text="@string/detail_count" />
	    </LinearLayout>
	    <ListView
	        android:id="@+id/lv_detail"
	        android:layout_below="@+id/lin_detail_top"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:divider="@null" 
	        android:listSelector="@android:color/transparent"
	        android:visibility="invisible" >
	    </ListView>
	    <LinearLayout
	        android:id="@+id/lin_handicap"
	        android:layout_alignParentTop="true"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:visibility="invisible" >
	    </LinearLayout>
	    <cn.limc.androidcharts.view.SlipLineChart
	        android:id="@+id/timeschart"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="@dimen/tickchart_order_width"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="invisible" />
	    <LinearLayout
	        android:id="@+id/lin_order_container"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
	        android:layout_width="@dimen/tickchart_order_width"
	       	android:layout_height="match_parent"
	       	android:visibility="invisible"
	       	android:orientation="vertical" >
	        <LinearLayout
			    android:id="@+id/tickchart_order1"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order2"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order3"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order4"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order5"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order6"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order7"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order8"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order9"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/tickchart_order10"
		        android:layout_width="match_parent"
		       	android:layout_height="0dip"
		       	android:layout_weight="1"
		       	android:orientation="horizontal" >
		    </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
	<cn.limc.androidcharts.view.SlipLineChart
        android:id="@+id/chart_2days"
        android:layout_below="@+id/lin_tops"
	    android:layout_above="@+id/lin_chart_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chartbackgroundcolor"
        android:visibility="invisible" />
	<cn.limc.androidcharts.view.SlipLineChart
        android:id="@+id/chart_3days"
        android:layout_below="@+id/lin_tops"
	    android:layout_above="@+id/lin_chart_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chartbackgroundcolor"
        android:visibility="invisible" />
	<TextView
        android:id="@+id/tv_float_datetime_1"
        android:layout_below="@+id/lin_tops"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/float_margin_top"
        android:layout_marginRight="@dimen/float_margin_top"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:textSize="@dimen/float_text_size" />
	<TextView
        android:id="@+id/tv_float_datetime_2"
        android:layout_below="@+id/tv_float_datetime_1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/float_margin_top"
        android:layout_marginRight="@dimen/float_margin_top"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:textSize="@dimen/float_text_size" />
	<TextView
        android:id="@+id/tv_float_datetime_3"
        android:layout_below="@+id/tv_float_datetime_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/float_margin_top"
        android:layout_marginRight="@dimen/float_margin_top"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:textSize="@dimen/float_text_size" />
	<LinearLayout
	    android:id="@+id/lin_charts_container"
	    android:layout_below="@+id/lin_tops"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="@dimen/bottom_chart_type_horizontal_width"
	    android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chartbackgroundcolor" >
	    <FrameLayout
		    android:id="@+id/frame_candleStickChart_contaienr"
		    android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="2"
       		android:visibility="visible" >
		    <cn.limc.androidcharts.view.BOLLMASlipCandleStickChart
		        android:id="@+id/bollmaslipcandlestickchart"
		        android:layout_width="match_parent"
	        	android:layout_height="match_parent" />
		    <TextView
		        android:id="@+id/tv_candlestick"
		        android:layout_marginTop="@dimen/float_margin_top"
		        android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:textSize="@dimen/float_text_size"
	        	android:textColor="@drawable/lightgray" />
		</FrameLayout>
		<LinearLayout
		    android:id="@+id/lin_mask"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="0dip"
	        android:layout_weight="1" >
	        <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <cn.limc.androidcharts.view.MAColoredSlipStickChart
			        android:id="@+id/slipstickchart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
		        <TextView
			        android:id="@+id/tv_vol_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
		    </FrameLayout>
	        
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <cn.limc.androidcharts.view.MACDChart
			        android:id="@+id/macdchart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
		        <TextView
			        android:id="@+id/tv_macd_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
		    </FrameLayout>
	        
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <cn.limc.androidcharts.view.SlipLineChart
			        android:id="@+id/kdjchart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
		        <TextView
			        android:id="@+id/tv_kdj_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
		    </FrameLayout>
			
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <cn.limc.androidcharts.view.SlipLineChart
			        android:id="@+id/rsichart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
		        <TextView
			        android:id="@+id/tv_rsi_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
		    </FrameLayout>
			
		    <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
		        <cn.limc.androidcharts.view.SlipLineChart
			        android:id="@+id/wrchart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
		        <TextView
			        android:id="@+id/tv_wr_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
		    </FrameLayout>
		    
			<FrameLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" >
			    <cn.limc.androidcharts.view.SlipLineChart
			        android:id="@+id/ccichart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
			    <TextView
			        android:id="@+id/tv_cci_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
			</FrameLayout>
			
			<FrameLayout
			    android:layout_width="match_parent"
		        android:layout_height="match_parent" >
			    <cn.limc.androidcharts.view.SlipLineChart
			        android:id="@+id/bollchart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
					android:visibility="visible"/>
			    <TextView
			        android:id="@+id/tv_boll_float"
			        android:layout_marginTop="@dimen/float_margin_top"
			        android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:textSize="@dimen/float_text_size"
		        	android:textColor="@drawable/lightgray" />
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/lin_chart_type"
	    android:layout_below="@+id/lin_tops"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="@dimen/bottom_chart_type_horizontal_width"
        android:layout_height="match_parent" >
	    <TextView
	        android:id="@+id/tv_vol"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_vol" />
	    <TextView
	        android:id="@+id/tv_macd"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_macd" />
	    <TextView
	        android:id="@+id/tv_kdj"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_kdj" />
	    <TextView
	        android:id="@+id/tv_rsi"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_rsi" />
	    <TextView
	        android:id="@+id/tv_wr"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_wr" />
	    <TextView
	        android:id="@+id/tv_cci"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_cci" />
	    <TextView
	        android:id="@+id/tv_boll"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:text="@string/chart_type_boll" />
	    <TextView
	        android:id="@+id/tv_setting"
        	android:layout_width="match_parent"
        	android:layout_height="0dip"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:textColor="@drawable/lightgray"
        	android:text="@string/chart_type_setting" />
	</LinearLayout>
</RelativeLayout>
