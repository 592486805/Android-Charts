<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor" >
    <View
        android:id="@+id/v_topline"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
       	android:layout_height="0.5dip"
       	android:background="@drawable/linecolor" />
    <LinearLayout
        android:id="@+id/lin_first_conrainer"
        android:layout_below="@+id/v_topline"
        android:layout_width="match_parent"
       	android:layout_height="@dimen/setting_item_height"
       	android:orientation="horizontal"
       	android:background="@drawable/white" >
        <TextView
            android:id="@+id/tv_first_indicator"
	        android:layout_marginLeft="10dip"
	       	android:layout_width="80dip"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:gravity="center" />
        <EditText
            android:id="@+id/et_first_indicator"
	       	android:layout_width="match_parent"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:textColorHint="@drawable/lightgray"
	       	android:inputType="number"
	       	android:background="@null" />
    </LinearLayout>
    <View
        android:id="@+id/v_secondline"
        android:layout_below="@+id/lin_first_conrainer"
        android:layout_width="match_parent"
       	android:layout_height="0.5dip"
       	android:background="@drawable/linecolor" />
    <LinearLayout
        android:id="@+id/lin_second_conrainer"
        android:layout_below="@+id/v_secondline"
        android:layout_width="match_parent"
       	android:layout_height="@dimen/setting_item_height"
       	android:orientation="horizontal"
       	android:background="@drawable/white" >
        <TextView
            android:id="@+id/tv_second_indicator"
	        android:layout_marginLeft="10dip"
	       	android:layout_width="80dip"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:gravity="center" />
        <EditText
            android:id="@+id/et_second_indicator"
	       	android:layout_width="match_parent"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:textColorHint="@drawable/lightgray"
	       	android:inputType="number"
	       	android:background="@null" />
    </LinearLayout>
    <View
        android:id="@+id/v_thirdline"
        android:layout_below="@+id/lin_second_conrainer"
        android:layout_width="match_parent"
       	android:layout_height="0.5dip"
       	android:background="@drawable/linecolor" />
    <LinearLayout
        android:id="@+id/lin_third_conrainer"
        android:layout_below="@+id/v_thirdline"
        android:layout_width="match_parent"
       	android:layout_height="@dimen/setting_item_height"
       	android:orientation="horizontal"
       	android:background="@drawable/white" >
        <TextView
            android:id="@+id/tv_third_indicator"
	        android:layout_marginLeft="10dip"
	       	android:layout_width="80dip"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:gravity="center" />
        <EditText
            android:id="@+id/et_third_indicator"
	       	android:layout_width="match_parent"
	       	android:layout_height="match_parent"
	       	android:textColor="@drawable/textcolor"
	       	android:textColorHint="@drawable/lightgray"
	       	android:inputType="number"
	       	android:background="@null" />
    </LinearLayout>
    <Button
    	android:id="@+id/btn_setting"
        android:layout_below="@+id/lin_third_conrainer"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_width="match_parent"
       	android:layout_height="@dimen/setting_item_height"
       	android:text="@string/setting"
       	android:background="@drawable/orange" />
</RelativeLayout>